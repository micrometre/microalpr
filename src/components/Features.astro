                                id="tabs-with-card-1"
                                role="tabpanel"
                                class=""
                                aria-labelledby="tabs-with-card-item-1"
                            >
                                <Image
                                    src={ImgFeatre}
                                    class="aspect-[3/2] rounded-xl object-cover shadow-xl shadow-neutral-200 dark:shadow-neutral-900/[.2] lg:aspect-auto"
                                    alt="test"
                                    format={"avif"}
                                    loading={"eager"}
                                />
                            </div><div
                                id="tabs-with-card-2"
                                role="tabpanel"
                                class="hidden"
                                aria-labelledby="tabs-with-card-item-2"
                            >
                                <Image
                                    src={ImgDash}
                                    class="aspect-[3/2] rounded-xl object-cover shadow-xl shadow-neutral-200 dark:shadow-neutral-900/[.2] lg:aspect-auto"
                                    alt="test"
                                    format={"avif"}
                                    loading={"eager"}
                                />
                            </div><div
                                id="tabs-with-card-3"
                                role="tabpanel"
                                class="hidden"
                                aria-labelledby="tabs-with-card-item-3"
                            >
                                <Image
                                    src={ImgMain}
                                    class="aspect-[3/2] rounded-xl object-cover shadow-xl shadow-neutral-200 dark:shadow-neutral-900/[.2] lg:aspect-auto"
                                    alt="test"
                                    format={"avif"}
                                    loading={"eager"}
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script is:inline src="/scripts/vendor/preline/tabs/index.js"></script>