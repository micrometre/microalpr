---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import HeroSection from "@/components/Hero.astro"
import Moto from '@/components/Moto.astro';
import Features from '@/components/Features.astro';
---

<Layout title="MicroALpr: Automatic Number Plate Recognition (ANPR) as a service">
	<main>
		<Moto/>
		<HeroSection />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
	}
</style>
<script is:inline src="/scripts/vendor/gsap/gsap.min.js"></script>
<script>
  window.addEventListener("load", () => {
    if (window.gsap) {
      const gsap = window.gsap;
      gsap.set("#fadeText", {
        autoAlpha: 0,
        y: 50,
        willChange: "transform, opacity",
      });
      gsap.set("#fadeInUp", {
        autoAlpha: 0,
        y: 50,
        willChange: "transform, opacity",
      });
      gsap.set("#fadeInMoveRight", {
        autoAlpha: 0,
        x: 300,
        willChange: "transform, opacity",
      });

      let timeline = gsap.timeline({ defaults: { overwrite: "auto" } });

      timeline.to("#fadeText", {
        duration: 1.5,
        autoAlpha: 1,
        y: 0,
        delay: 1,
        ease: "power2.out",
      });

      timeline.to(
        "#fadeInUp",
        { duration: 1.5, autoAlpha: 1, y: 0, ease: "power2.out" },
        "-=1.2",
      );

      timeline.to(
        "#fadeInMoveRight",
        { duration: 1.5, autoAlpha: 1, x: 0, ease: "power2.inOut" },
        "-=1.4",
      );
    }
  });
</script>

